<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.assignment.practicemvvm.TrainingModuleFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" >


        <action
            app:destination="@id/detailFragment"
            android:id="@+id/action_List_to_detail" />

        <argument
            android:name="trainerData"
            app:argType="com.assignment.practicemvvm.models.TrainingListModel"  />


    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.assignment.practicemvvm.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >

        <argument
            android:name="trainerData"
            app:argType="com.assignment.practicemvvm.models.TrainingListModel"  />

    </fragment>
</navigation>